{
    "name": "elementum",
    "version": "1.0.0",
    "description": "A simple Markdown editor",
    "main": "main.js",
    "scripts": {
        "dev": "vite",
        "start": "concurrently \"npm run dev\" \"electron .\"",
        "build": "vite build",
        "serve": "vite preview",
        "package": "electron-builder"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@tailwindcss/postcss": "4.0.0",
        "@tailwindcss/postcss7-compat": "2.2.17",
        "highlight.js": "11.11.1",
        "katex": "0.16.21",
        "react": "19.0.0",
        "react-dom": "19.0.0",
        "react-markdown": "9.0.3",
        "react-syntax-highlighter": "15.6.1",
        "rehype-highlight": "7.0.1",
        "rehype-katex": "7.0.1",
        "remark-gfm": "4.0.0",
        "remark-math": "6.0.0",
        "tailwindcss": "^3.0.0"
    },
    "devDependencies": {
        "@vitejs/plugin-react": "4.3.4",
        "autoprefixer": "10.4.20",
        "concurrently": "9.1.2",
        "electron": "34.0.1",
        "electron-builder": "25.1.8",
        "postcss": "8.5.1",
        "react-devtools": "6.1.0",
        "tailwindcss": "4.0.0",
        "vite": "6.0.11"
    },
    "build": {
        "appId": "com.elementum.app",
        "productName": "Elementum",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "main.js",
            "preload.js"
        ],
        "win": {
            "target": "nsis",
            "icon": "icon.ico"
        },
        "mac": {
            "target": "dmg",
            "icon": "icon.icns"
        },
        "linux": {
            "target": "AppImage"
        }
    }
}
